<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <GridLayout
            android:layout_width="409dp"
            android:layout_height="601dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:rowCount="4" android:columnCount="2">

        <Button
                android:text="Do You&#10; Speak English"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:layout_row="0" app:layout_column="0"
                android:id="@+id/button1" android:onClick="playPhrase" android:tag="1"/>
        <Button
                android:text="Good Evening"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:layout_row="0" app:layout_column="1"
                android:id="@+id/button2"
                android:onClick="playPhrase"
                android:tag="2"/>

        <Button
                android:text="Hello"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:layout_row="1" app:layout_column="0"
                android:id="@+id/button3"
                android:onClick="playPhrase"
                android:tag="3"/>

        <Button
                android:text="How Are You?"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:layout_row="1" app:layout_column="1"
                android:id="@+id/button4"
                android:onClick="playPhrase"
                android:tag="4"/>

        <Button
                android:text="I Live In..."
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:layout_row="2" app:layout_column="0"
                android:id="@+id/button5"
                android:onClick="playPhrase"
                android:tag="5"/>
        <Button
                android:text="My Name Is..."
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:layout_row="2" app:layout_column="1"
                android:id="@+id/button6"
                android:onClick="playPhrase"
                android:tag="6"/>

        <Button
                android:text="Please"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:layout_row="3" app:layout_column="0"
                android:id="@+id/button7"
                android:onClick="playPhrase"
                android:tag="7"/>

        <Button
                android:text="Welcome"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:layout_row="3" app:layout_column="1"
                android:id="@+id/button8"
                android:onClick="playPhrase"
                android:tag="8"/>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>